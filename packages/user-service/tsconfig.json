{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es6"],
    "module": "commonjs",
    "types": ["reflect-metadata"],
    "outDir": "./build",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
